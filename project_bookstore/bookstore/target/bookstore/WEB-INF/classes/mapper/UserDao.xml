<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace指定我们的到具体的bean -->
<mapper namespace="com.example.java.com.example.java.com.example.test.controller.java.com.example.test.dao.UserDao">

    <!--增加-->
    <insert id="add" parameterType="User">
        INSERT INTO user (`id`,`name`,`password`,`tel`,`authority`)
        VALUES (#{id}, #{name}, #{password}, #{tel}, #{authority});
    </insert>

    <!-- 删除 -->
    <delete id="delete" parameterType="User">
        DELETE FROM user WHERE id = #{id};
    </delete>

    <!-- 更新用户信息 -->
    <update id="update" parameterType="User">
        UPDATE user SET
            name = #{name}, password = #{password}, tel = #{tel}, authority = #{authority}
        WHERE
            id = #{loginId};
    </update>

    <!--根据id查找-->
    <select id="findOneById" resultType="User" parameterType="String">
        SELECT * FROM user WHERE id = #{id};
    </select>

</mapper>